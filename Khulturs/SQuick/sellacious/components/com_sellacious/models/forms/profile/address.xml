<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="addresses" label="COM_SELLACIOUS_USER_FIELDSET_ADDRESSES">
		<fields name="address">
			<field
				name="id"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_ID_LABEL"
				description="COM_SELLACIOUS_USER_FIELD_ADDRESS_ID_DESC"
				default="0"
				readonly="true"
				class="input-disabled"
			/>
			<field
				name="user_id"
				type="hidden"
				default="0"
				readonly="true"
			/>
			<field
				name="name"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_NAME_LABEL"
				description="COM_SELLACIOUS_USER_FIELD_ADDRESS_NAME_DESC"
				class="inputbox"
			/>
			<field
				name="first_name"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_FIRST_NAME_LABEL"
				class="inputbox address-first_name"
			/>
			<field
				name="middle_name"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_MIDDLE_NAME_LABEL"
				class="inputbox address-middle_name"
			/>
			<field
				name="last_name"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_LAST_NAME_LABEL"
				class="inputbox address-last_name"
			/>
			<field
				name="company"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_COMPANY_LABEL"
				class="inputbox address-company"
			/>
			<field
				name="po_box"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_PO_BOX_LABEL"
				class="inputbox address-po_box"
			/>
			<field
				name="address"
				type="textarea"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_ADDRESS_LABEL"
				description="COM_SELLACIOUS_USER_FIELD_ADDRESS_ADDRESS_DESC"
				class="inputbox textarea"
			/>
			<field
				name="address_line_1"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_ADDRESS_LINE_1_LABEL"
				class="inputbox address-address_line_1"
			/>
			<field
				name="address_line_2"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_ADDRESS_LINE_2_LABEL"
				class="inputbox address-address_line_2"
			/>
			<field
				name="address_line_3"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_ADDRESS_LINE_3_LABEL"
				class="inputbox address-address_line_3"
			/>
			<field
				name="landmark"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_LANDMARK_LABEL"
				class="inputbox address-land_mark"
			/>
			<field
				name="mobile"
				type="tel"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_MOBILE_LABEL"
				description="COM_SELLACIOUS_USER_FIELD_ADDRESS_MOBILE_DESC"
				class="inputbox validate-mobile"
			/>
			<field
				name="country"
				type="location"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_COUNTRY_LABEL"
				description="COM_SELLACIOUS_USER_FIELD_ADDRESS_COUNTRY_DESC"
				class="gl-input"
				autocomplete="off"
				gl_type="country"
				rel=""
			/>
			<field
				name="state_loc"
				type="location"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_STATE_LOC_LABEL"
				description="COM_SELLACIOUS_USER_FIELD_ADDRESS_STATE_LOC_DESC"
				class="gl-input"
				autocomplete="off"
				gl_type="state"
				rel="address.country"
			/>
			<field
				name="district"
				type="location"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_DISTRICT_LABEL"
				description="COM_SELLACIOUS_USER_FIELD_ADDRESS_DISTRICT_DESC"
				class="gl-input"
				autocomplete="off"
				gl_type="district"
				rel="address.state_loc|address.country"
			/>
			<field
				name="zip"
				type="text"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_ZIP_LABEL"
				description="COM_SELLACIOUS_USER_FIELD_ADDRESS_ZIP_DESC"
				class="inputbox"
				size="20"
			/>
			<field
				name="residential"
				type="radio"
				label="COM_SELLACIOUS_USER_FIELD_ADDRESS_RESIDENTIAL_LABEL"
				class="inputbox address-residential"
			>
				<option value="0">COM_SELLACIOUS_ADDRESS_FORM_FIELD_TYPE_OPTION_OFFICE</option>
				<option value="1">COM_SELLACIOUS_ADDRESS_FORM_FIELD_TYPE_OPTION_RESIDENTIAL</option>
			</field>
		</fields>
	</fieldset>
</form>

<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="sellerid"
			label="PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_FILTER_SELLER_ID"
			type="sellers"
			default=""
			class="medium-input"
			onchange="this.form.submit()"
		>
			<option value="">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_FILTER_SELLER_ID_SELECT</option>
		</field>
		<field
			name="date"
			type="calendar"
			label=""
			description=""
			class="inputbox calendar-input"
			size="30"
			validate="datetime"
			format="%Y-%m-%d"
			filter="server_utc"
			onchange="this.form.submit();"
		/>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_CONTENT_LIST_FULL_ORDERING"
			description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="slot_from_time DESC"
		>
			<option value="seller_name ASC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_SELLER_NAME_ASC</option>
			<option value="seller_name DESC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_SELLER_NAME_DESCN</option>
			<option value="product_name ASC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_PRODUCT_NAME_ASC</option>
			<option value="product_name DESC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_PRODUCT_NAME_DESCN</option>
			<option value="slot_from_time ASC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_SLOT_FROM_TIME_ASC</option>
			<option value="slot_from_time DESC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_SLOT_FROM_TIME_DESCN</option>
			<option value="slot_limit ASC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_SLOT_LIMIT_ASC</option>
			<option value="slot_limit DESC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_SLOT_LIMIT_DESCN</option>
			<option value="slot_count ASC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_SLOT_COUNT_ASC</option>
			<option value="slot_count DESC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_SLOT_COUNT_DESCN</option>
			<option value="total_sales ASC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_TOTAL_SALES_ASC</option>
			<option value="total_sales DESC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_TOTAL_SALES_DESCN</option>
			<option value="last_sale ASC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_LAST_SALE_ASC</option>
			<option value="last_sale DESC">PLG_SYSTEM_SELLACIOUSREPORTSDELIVERY_LAST_SALE_DESCN</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			class="input-mini"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>

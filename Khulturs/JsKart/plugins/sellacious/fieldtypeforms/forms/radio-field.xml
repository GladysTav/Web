<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params">
		<fieldset name="params" label="COM_SELLACIOUS_FIELDSET_ADDITIONAL">
			<field
				type="sellacious.subform"
				name="listoptions"
				label="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_RADIO_OPTIONS_LABEL"
				description="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_RADIO_OPTIONS_DESC"
				layout="com_sellacious.fields.list_options.repeatable-table"
				buttons="add,remove"
				multiple="true"
				required="true"
			>
				<form hidden="true" name="list_options" repeat="true">
					<field
						name="en-GB"
						type="text"
						label="en-GB"
						required="true"
					/>
				</form>
			</field>
			<field
				name="sortable"
				type="radioswitch"
				label="PLG_SELLACIOUS_FIELDTYPEFORMS_OPTIONS_SORTABLE_LABEL"
				description="PLG_SELLACIOUS_FIELDTYPEFORMS_OPTIONS_SORTABLE_DESC"
				default="1"
				>
				<option value="1">JYES</option>
				<option value="0">JNo</option>
			</field>
			<field
				name="default"
				type="text"
				label="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DEFAULT_LABEL"
				description="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DEFAULT_DESC"
				class="inputbox"
				/>
			<field
				name="readonly"
				type="radioswitch"
				label="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_READ_ONLY_LABEL"
				description="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_READ_ONLY_DESC"
				default="false"
				>
				<option value="true">JYes</option>
				<option value="false">JNo</option>
			</field>
			<field
				name="disabled"
				type="radioswitch"
				label="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DISABLED_LABEL"
				description="PLG_SELLACIOUS_FIELDTYPEFORMS_ATTRIBUTE_DISABLED_DESC"
				default="false"
			>
				<option value="true">JYes</option>
				<option value="false">JNo</option>
			</field>
		</fieldset>
	</fields>
</form>

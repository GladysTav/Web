<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" method="upgrade">
	<name>mod_sellacious_toolbar</name>
	<author>Aditya Chakraborty</author>
	<creationDate>April 07, 2020</creationDate>
	<copyright>Copyright (C) 2012-2020 Bhartiy Web Technologies. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@bhartiy.com</authorEmail>
	<authorUrl>www.bhartiy.com</authorUrl>
	<version>2.0.0-beta1</version>
	<description>MOD_SELLACIOUS_TOOLBAR_DESC</description>
	<files>
		<filename module="mod_sellacious_toolbar">mod_sellacious_toolbar.php</filename>
		<filename>helper.php</filename>
		<folder>language</folder>
		<folder>tmpl</folder>
	</files>
	<media folder="media" destination="mod_sellacious_toolbar">
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic"
			          addfieldpath="/sellacious/components/com_sellacious/models/fields">
				<field
					type="note"
					name="module_note"
					class="alert alert-info"
					heading="h5"
					label=""
					description="MOD_SELLACIOUS_TOOLBAR_MODULE_NOTE_DESC"
				/>
				<field
					name="bar_position"
					type="radio"
					class="btn-group"
					label="MOD_SELLACIOUS_TOOLBAR_BAR_POSITION_LABEL"
					description="MOD_SELLACIOUS_TOOLBAR_BAR_POSITION_DESC"
					default="top"
				>
					<option value="top">MOD_SELLACIOUS_TOOLBAR_POSITION_TOP</option>
					<option value="bottom">MOD_SELLACIOUS_TOOLBAR_POSITION_BOTTOM</option>
				</field>
				<field
					name="logo"
					type="media"
					label="MOD_SELLACIOUS_TOOLBAR_BAR_LOGO_LABEL"
					description="MOD_SELLACIOUS_TOOLBAR_BAR_LOGO_DESC"
				/>
				<field name="show_dashboard_menu"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_DASHBOARD_MENU_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_DASHBOARD_MENU_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_orders_menu"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_ORDERS_MENU_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_ORDERS_MENU_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="unread_orders_setting"
				       type="OrderStatus"
				       class="btn-group"
				       label="MOD_SELLACIOUS_TOOLBAR_UNREAD_ORDERS_SETTING_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_UNREAD_ORDERS_SETTING_DESC"
				       default="1"
				       multiple="true"
				       show_context="true"
				       showon="show_orders_menu:1"
				/>
				<field name="show_add_product_menu"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_ADD_PRODUCT_MENU_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_ADD_PRODUCT_MENU_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_product_catalog_menu"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_PRODUCT_CATALOG_MENU_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_PRODUCT_CATALOG_MENU_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_buy_now_menu"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_BUY_NOW_MENU_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_BUY_NOW_MENU_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_edit_product_menu"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_EDIT_PRODUCT_MENU_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_EDIT_PRODUCT_MENU_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_messages_menu"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_MESSAGES_MENU_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_MESSAGES_MENU_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_questions_menu"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_QUESTIONS_MENU_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_QUESTIONS_MENU_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="check_messages_interval"
				       type="number"
				       label="MOD_SELLACIOUS_TOOLBAR_CHECK_MESSAGES_INTERVAL_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_CHECK_MESSAGES_INTERVAL_DESC"
				       default="3"
				       showon="show_messages_menu:1[OR]show_questions_menu=1"
				/>
				<field name="usermenu"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_TOOLBAR_USERMENU_LABEL"
				       description="MOD_SELLACIOUS_TOOLBAR_USERMENU_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="register_link"
				       type="text"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_REGISTER_BUTTON_TITLE"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_REGISTER_BUTTON_DESC"
				/>
				<field name="sell_with_us_link"
				       type="text"
				       label="MOD_SELLACIOUS_TOOLBAR_SHOW_SELL_WITH_US_BUTTON_TITLE"
				       description="MOD_SELLACIOUS_TOOLBAR_SHOW_SELL_WITH_US_BUTTON_DESC"
				/>
				<field name="class_sfx"
			       type="text"
			       label="MOD_SELLACIOUS_TOOLBAR_SHOW_MODULE_CLASS_SUFFIX_LABEL"
			       description="MOD_SELLACIOUS_TOOLBAR_SHOW_MODULE_CLASS_SUFFIX_DESC"
			       default=""
				/>
			</fieldset>
		</fields>
	</config>
</extension>

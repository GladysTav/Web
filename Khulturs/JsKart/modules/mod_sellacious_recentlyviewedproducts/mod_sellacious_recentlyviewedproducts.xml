					name="splcategory"
					type="sql"
					label="MOD_SELLACIOUS_PRODUCTS_SPLCATEGORY_LABEL"
					description="MOD_SELLACIOUS_PRODUCTS_SPLCATEGORY_DESC"
					query="SELECT id, title FROM #__sellacious_splcategories WHERE state = 1 AND level > 0"

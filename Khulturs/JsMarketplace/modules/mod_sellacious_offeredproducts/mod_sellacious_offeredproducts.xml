<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" method="upgrade">
	<name>mod_sellacious_offeredproducts</name>
	<author>Mohd Kareemuddin</author>
	<creationDate>May 25, 2017</creationDate>
	<copyright>Copyright (C) 2017 Bhartiy Web Technologies. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@bhartiy.com</authorEmail>
	<authorUrl>www.bhartiy.com</authorUrl>
	<version>1.0.1</version>
	<description>MOD_SELLACIOUS_OFFEREDPRODUCTS_DESC</description>

	<files>
		<folder>fields</folder>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename module="mod_sellacious_offeredproducts">mod_sellacious_offeredproducts.php</filename>
	</files>
	<media folder="media" destination="mod_sellacious_offeredproducts">
		<folder>css</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="description" label="Description">
				<field name="note"
				       type="note"
				       label="MOD_SELLACIOUS_OFFEREDPRODUCTS_NOTE_LABEL"
				       description="MOD_SELLACIOUS_OFFEREDPRODUCTS_NOTE_DESC"
			       />
			</fieldset>
			<fieldset name="basic" addfieldpath="modules/mod_sellacious_offeredproducts/fields">
				<field  name="modtitle"
				        type="text"
				        default=""
				        hint="MOD_SELLACIOUS_OFFEREDPRODUCTS_TITLE_HINT"
				        label="MOD_SELLACIOUS_OFFEREDPRODUCTS_TITLE_LABEL"
				        description="MOD_SELLACIOUS_OFFEREDPRODUCTS_TITLE_DESC">
				</field>

				<field  name="usecatsorprods"
						type="list"
						default="1"
						label="MOD_SELLACIOUS_OFFEREDPRODUCTS_USECATSORPRODS_LABEL"
						description="MOD_SELLACIOUS_OFFEREDPRODUCTS_USECATSORPRODS_DESC">
					<option value="1">MOD_SELLACIOUS_OFFEREDPRODUCTS_USEPRODS_OPTION</option>
					<option value="0">MOD_SELLACIOUS_OFFEREDPRODUCTS_USECATS_OPTION</option>
				</field>

				<field name="layout_style"
				       type="list"
				       label="MOD_SELLACIOUS_OFFEREDPRODUCTS_STYLE_LABEL"
				       description="MOD_SELLACIOUS_OFFEREDPRODUCTS_STYLE_DESC">
						<option value="1">MOD_SELLACIOUS_OFFEREDPRODUCTS_STYLE_ONE</option>
						<option value="2">MOD_SELLACIOUS_OFFEREDPRODUCTS_STYLE_TWO</option>
						<option value="3">MOD_SELLACIOUS_OFFEREDPRODUCTS_STYLE_THREE</option>
				</field>
				<field name="categories"
				       multiple="false"
				       type="categoryList"
				       label="MOD_SELLACIOUS_OFFEREDPRODUCTS_CATEGORIES_LABEL"
				       description="MOD_SELLACIOUS_OFFEREDPRODUCTS_CATEGORIES_DESC"
				       group="product/physical;product/electronic"
				       show_all="true"
					   showon="usecatsorprods:0">
						<option value="">-- All Categories --</option>
				</field>

				<field name="mainproduct"
				       multiple="false"
				       type="mainproduct"
				       label="MOD_SELLACIOUS_OFFEREDPRODUCTS_MAINPRODUCT_LABEL"
				       description="MOD_SELLACIOUS_OFFEREDPRODUCTS_MAINPRODUCT_DESC"
				       showon="layout_style:1,2[AND]usecatsorprods:1">
						<option value="">-- SELECT --</option>
				</field>
				<field name="products"
				       multiple="true"
				       type="productlist"
				       label="MOD_SELLACIOUS_OFFEREDPRODUCTS_PRODUCTS_LABEL"
				       description="MOD_SELLACIOUS_OFFEREDPRODUCTS_PRODUCTS_DESC"
				       showon="usecatsorprods:1"
				/>


				<field 	name="ordering"
						type="list"
						default="4"
						label="MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERING_LABEL"
						description="MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERING_DESC">
					<option value="1">MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERING_ALPHA</option>
					<option value="2">MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERING_PRICE</option>
					<option value="3">MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERING_DATE</option>
					<option value="4">MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERING_RANDOM</option>
				</field>

				<field 	name="orderby"
						type="list"
						default="DESC"
						label="MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERBY_LABEL"
						description="MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERBY_DESC"
						showon="ordering:1[OR]ordering:2[OR]ordering:3" >
					<option value="ASC">MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERBY_ASCENDING</option>
					<option value="DESC">MOD_SELLACIOUS_OFFEREDPRODUCTS_ORDERBY_DESCENDING</option>
				</field>

				<field name="class_sfx"
				       type="text"
				       default=""
				       label="MOD_SELLACIOUS_OFFEREDPRODUCTS_SHOW_MODULE_CLASS_SUFFIX_LABEL"
				       description="MOD_SELLACIOUS_OFFEREDPRODUCTS_SHOW_MODULE_CLASS_SUFFIX_DESC"/>

			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" name="Sellacious Offered Products Module">http://sellacious.com/release/mod_sellacious_offeredproducts.xml</server>
	</updateservers>
</extension>

<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" method="upgrade">
	<name>mod_sellacious_hyperlocal</name>
	<author>Aditya Chakraborty</author>
	<creationDate>July 19, 2019</creationDate>
	<copyright>Copyright (C) 2012-2019 Bhartiy Web Technologies. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@bhartiy.com</authorEmail>
	<authorUrl>www.bhartiy.com</authorUrl>
	<version>1.7.4-alpha2</version>
	<description>MOD_SELLACIOUS_HYPERLOCAL_DESC</description>
	<files>
		<filename module="mod_sellacious_hyperlocal">mod_sellacious_hyperlocal.php</filename>
		<filename>helper.php</filename>
		<filename>latitude_inner_details.xml</filename>
		<filename>location_inner_details.xml</filename>
		<folder>language</folder>
		<folder>tmpl</folder>
	</files>
	<media folder="media" destination="mod_sellacious_hyperlocal">
		<folder>css</folder>
		<folder>js</folder>
	</media>
	<config>
		<fields name="params">
			<fieldset name="basic"
				addfieldpath="/sellacious/components/com_sellacious/models/fields">
				<field name="browser_detect"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_HYPERLOCAL_BROWSER_DETECT_LABEL"
				       description="MOD_SELLACIOUS_HYPERLOCAL_BROWSER_DETECT_DESC"
				       default="1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="address_autocomplete"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_HYPERLOCAL_ADDRESS_AUTOCOMPLETE_LABEL"
				       description="MOD_SELLACIOUS_HYPERLOCAL_ADDRESS_AUTOCOMPLETE_DESC"
				       default="1">
					<option value="1">MOD_SELLACIOUS_HYPERLOCAL_DATABASE</option>
					<option value="2">MOD_SELLACIOUS_HYPERLOCAL_GOOGLE_API</option>
				</field>
				<field name="address_matching"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_HYPERLOCAL_ADDRESS_MATCHING_LABEL"
				       description="MOD_SELLACIOUS_HYPERLOCAL_ADDRESS_MATCHING_DESC"
				       default="1">
					<option value="1">MOD_SELLACIOUS_HYPERLOCAL_ADDRESS_MATCHING_BY_POINT</option>
					<option value="2">MOD_SELLACIOUS_HYPERLOCAL_ADDRESS_MATCHING_BY_AREA</option>
				</field>
				<field
					name="address_matching_area"
					type="list"
					label="MOD_SELLACIOUS_HYPERLOCAL_ADDRESS_MATCHING_AREA_LABEL"
					description="MOD_SELLACIOUS_HYPERLOCAL_ADDRESS_MATCHING_AREA_DESC"
					default="city"
					showon="address_matching:2"
				>
					<option value="zip">MOD_SELLACIOUS_ADDRESS_MATCHING_ZIP</option>
					<option value="sublocality">MOD_SELLACIOUS_ADDRESS_MATCHING_SUBLOCALITY</option>
					<option value="locality">MOD_SELLACIOUS_ADDRESS_MATCHING_LOCALITY</option>
					<option value="city">MOD_SELLACIOUS_ADDRESS_MATCHING_CITY</option>
					<option value="district">MOD_SELLACIOUS_ADDRESS_MATCHING_DISTRICT</option>
					<option value="state">MOD_SELLACIOUS_ADDRESS_MATCHING_STATE</option>
					<option value="country">MOD_SELLACIOUS_ADDRESS_MATCHING_COUNTRY</option>
				</field>
				<field name="show_filter_by_distance"
				       type="radio"
				       class="btn-group btn-group-yesno"
				       label="MOD_SELLACIOUS_HYPERLOCAL_SHOW_FILTER_BY_DISTANCE_LABEL"
				       description="MOD_SELLACIOUS_HYPERLOCAL_SHOW_FILTER_BY_DISTANCE_DESC"
				       default="0"
				       showon="address_matching:1">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="distance_unit"
					type="unit"
					label="MOD_SELLACIOUS_HYPERLOCAL_DISTANCE_UNIT_LABEL"
					description="MOD_SELLACIOUS_HYPERLOCAL_DISTANCE_UNIT_DESC"
					unit_group="Length"
					class="medium-input"
					showon="address_matching:1[AND]show_filter_by_distance:1"
				/>
				<field
					name="distance_max"
					type="number"
					label="MOD_SELLACIOUS_HYPERLOCAL_DISTANCE_MAX_LABEL"
					description="MOD_SELLACIOUS_HYPERLOCAL_DISTANCE_MAX_DESC"
					default="200"
					class="medium-input"
					showon="address_matching:1[AND]show_filter_by_distance:1"
				/>
				<field name="autofill_components"
				       type="checkboxes"
				       multiple="true"
				       label="MOD_SELLACIOUS_HYPERLOCAL_AUTOFILL_COMPONENTS_LABEL"
				       description="MOD_SELLACIOUS_HYPERLOCAL_AUTOFILL_COMPONENTS_DESC"
				       default="zip,city,district,state,country">
					<option value="locality">MOD_SELLACIOUS_HYPERLOCAL_AUTOFILL_OPTION_LOCALITY</option>
					<option value="zip">MOD_SELLACIOUS_HYPERLOCAL_AUTOFILL_OPTION_ZIP</option>
					<option value="city">MOD_SELLACIOUS_HYPERLOCAL_AUTOFILL_OPTION_CITY</option>
					<option value="district">MOD_SELLACIOUS_HYPERLOCAL_AUTOFILL_OPTION_DISTRICT</option>
					<option value="state">MOD_SELLACIOUS_HYPERLOCAL_AUTOFILL_OPTION_STATE</option>
					<option value="country">MOD_SELLACIOUS_HYPERLOCAL_AUTOFILL_OPTION_COUNTRY</option>
				</field>
				<field
						name="display_layout"
						type="modulelayout"
						label="MOD_SELLACIOUS_HYPERLOCAL_DISPLAY_LAYOUT_LABEL"
						description="MOD_SELLACIOUS_HYPERLOCAL_DISPLAY_LAYOUT_DESC"
						class="inputbox w100p"
						default="Style1">
					<option value="style1">Style1</option>
					<option value="style2">Style2</option>
					<option value="style3">Style3</option>
					<option value="style4">Style4</option>
				</field>
				<field
						name="display_location_via"
						type="radio"
						label="MOD_SELLACIOUS_HYPERLOCAL_DISPLAY_LOACTION_VIA_LABEL"
						description="MOD_SELLACIOUS_HYPERLOCAL_DISPLAY_LOACTION_VIA_DESC"
						class="btn-group btn-group-yesno"
						default="latitude_longitude"
						showon="display_layout:_:style1[OR]display_layout:_:style2"
						>
					<option value="latitude_longitude">Latitude</option>
					<option value="location">Location</option>
				</field>
				<field name="show_location_by_style_two"
					   type="radio"
					   class=""
					   label="MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_LABEL"
					   description="MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_LABEL_DESC"
					   default="state"
					   showon="display_layout:_:style2[AND]display_location_via:location">
					<option value="country">MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_COUNTRY_LABEL</option>
					<option value="state">MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_STATE_LABEL</option>
					<option value="city">MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_CITY_LABEL</option>
					<option value="zip">MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_ZIP_LABEL</option>
				</field>
				<field name="show_location_by_style_one"
					   type="radio"
					   class=""
					   label="MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_LABEL"
					   description="MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_LABEL_DESC"
					   default="state"
					   showon="display_layout:_:style1[AND]display_location_via:location">
					<option value="country">MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_COUNTRY_LABEL</option>
					<option value="state">MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_STATE_LABEL</option>
					<option value="city">MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_CITY_LABEL</option>
					<option value="zip">MOD_SELLACIOUS_HYPERLOCAL_SHOW_LOCATION_BY_ZIP_LABEL</option>
				</field>
				<field
						name="adddetails_one_location"
						type="subform"
						label="MOD_SELLACIOUS_HYPERLOCAL_SELECT_TITLE"
						description="MOD_SELLACIOUS_HYPERLOCAL_SELECT_DESC"
						formsource="modules/mod_sellacious_hyperlocal/location_inner_details.xml"
						layout="joomla.form.field.subform.repeatable"
						multiple="true"
						buttons="add,remove"
						showon="display_layout:_:style1[AND]display_location_via:location"
				/>
				<field
						name="adddetails_two_location"
						type="subform"
						label="MOD_SELLACIOUS_HYPERLOCAL_SELECT_TITLE"
						description="MOD_SELLACIOUS_HYPERLOCAL_SELECT_DESC"
						formsource="modules/mod_sellacious_hyperlocal/location_inner_details.xml"
						layout="joomla.form.field.subform.repeatable"
						multiple="true"
						buttons="add,remove"
						showon="display_layout:_:style2[AND]display_location_via:location"
				/>
				<field
						name="adddetails_one_lat"
						type="subform"
						label="MOD_SELLACIOUS_HYPERLOCAL_SELECT_TITLE"
						description="MOD_SELLACIOUS_HYPERLOCAL_SELECT_DESC"
						formsource="modules/mod_sellacious_hyperlocal/latitude_inner_details.xml"
						layout="joomla.form.field.subform.repeatable"
						multiple="true"
						buttons="add,remove"
						showon="display_layout:_:style1[AND]display_location_via:latitude_longitude"
				/>
				<field
						name="adddetails_two_lat"
						type="subform"
						label="MOD_SELLACIOUS_HYPERLOCAL_SELECT_TITLE"
						description="MOD_SELLACIOUS_HYPERLOCAL_SELECT_DESC"
						formsource="modules/mod_sellacious_hyperlocal/latitude_inner_details.xml"
						layout="joomla.form.field.subform.repeatable"
						multiple="true"
						buttons="add,remove"
						showon="display_layout:_:style2[AND]display_location_via:latitude_longitude"
				/>
			</fieldset>
		</fields>
	</config>
</extension>

	<description>PLG_SYSTEM_SELLACIOUSFREESHIPPING_DESC</description>
	<install>
		<sql>
			<file driver="mysqli" charset="utf8">sql/plg_system_sellaciousfreeshipping.install.mysqli.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
